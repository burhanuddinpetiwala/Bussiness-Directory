<head>
    <meta name="viewport" content="width=device-width" />

    <title>Edit Page</title>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <style>
        body {
            background-color: #dbdbdb;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        .active {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            width: 60%;
            padding: 3%;
            margin-left: 20%;
            margin-right: 20%;
        }

        tr {
            padding-left: 55%;
            margin-bottom: 5em;
            font-size: 20px;
        }

        input[type=submit] {
            background-color: #04AA6D;
            color: white;
            font-size: 16px;
            font-weight: bold;
            padding: 10px 18px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .btn-link {
            font-size: 18px;
        }
    </style>
</head>

<body style="padding:15px">
    @using (Html.BeginForm("Edit", "BusinessDirectory", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <h2>Edit Page</h2>

        <hr />
        <div class="active">
            <h3 style="text-align: center"> Edit Business</h3>
            <br />
            <table class="table">

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Bussname)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Bussname)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Busslogo)
                    </td>
                    <td>
                        <input type="file" accept="image/*" name="UploadFile" required />
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.location)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.location)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.BussPhoneNumber)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.BussPhoneNumber)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.discription)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.discription)
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" name="submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </div>
    }
    <div class="btn-link">
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>


